# Database Configuration (REQUIRED)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=parrot
DB_PASSWORD=your_secure_password_here_min_8_chars
DB_DATABASE=nfl_draft

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PORT=6379

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Security (REQUIRED)
ADMIN_API_KEY=your_random_32_character_admin_key_here_

# Email Configuration (optional, disabled by default)
EMAIL_ENABLED=false
EMAIL_SERVICE=smtp
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@nfl-draft-analysis.local
EMAIL_TO_ADDRESS=admin@nfl-draft-analysis.local
EMAIL_USE_TLS=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=NFL Draft Queen API
API_VERSION=0.1.0

# pgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Scheduler Configuration
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC
SCHEDULER_LOAD_SCHEDULE_HOUR=2
SCHEDULER_LOAD_SCHEDULE_MINUTE=0
SCHEDULER_QUALITY_SCHEDULE_HOUR=2
SCHEDULER_QUALITY_SCHEDULE_MINUTE=30

# NFL.com Configuration
NFLCOM_ENABLED=true
NFLCOM_BASE_URL=https://www.nfl.com/api-web/v2
NFLCOM_TIMEOUT_SECONDS=30
NFLCOM_MAX_RETRIES=3
NFLCOM_RETRY_DELAY_SECONDS=5
NFLCOM_RATE_LIMIT_REQUESTS_PER_SECOND=1.0

# PFF Configuration
PFF_SEASON=2026
PFF_MAX_PAGES=10
PFF_RATE_LIMIT=4.0
PFF_CACHE_TTL=86400

# Data Quality Thresholds
QUALITY_COMPLETENESS_THRESHOLD_PCT=98.0
QUALITY_MAX_ALLOWED_DUPLICATES=5
QUALITY_MAX_ALLOWED_ERRORS=10
QUALITY_MAX_AGE_HOURS=24
QUALITY_OUTLIER_Z_SCORE=3.0

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=json
LOGGING_LOG_DIR=logs
LOGGING_MAX_BYTES=10485760
LOGGING_BACKUP_COUNT=7
LOGGING_LOKI_ENABLED=false
LOGGING_LOKI_URL=http://localhost:3100
